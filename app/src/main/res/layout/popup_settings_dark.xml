<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAlmondLight"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@color/freyaPrimary"
        android:minWidth="100dp"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/menu_settings_item"
            style="@style/AppTheme.PopupMenuItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/freyaPrimary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_gear"
                app:tint="@color/colorRightBubble" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aldrich"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/settings"
                    android:textColor="@color/colorAlmondLight" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/menu_privacy_item"
            style="@style/AppTheme.PopupMenuItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/freyaPrimary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_privacy"
                app:tint="@color/colorRightBubble" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aldrich"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="@string/fui_privacy_policy"
                    android:textColor="@color/colorAlmondLight" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>